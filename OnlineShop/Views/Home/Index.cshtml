
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var slides = ViewBag.Slides as List<OnlineShop.Models.EF.Slide>;
    var newProducts = ViewBag.NewProducts as List<OnlineShop.Models.EF.Product>;
    var featureProducts = ViewBag.FeatureProducts as List<OnlineShop.Models.EF.Product>;
}

@section header_slider{
    <div class="header_slide">
        <div class="header_bottom_left">
            <div class="categories">
                @{
                    Html.RenderAction("ProductCategory", "Product");
                }
            </div>
            <div class="clear"></div>
        </div>
        <div class="header_bottom_right">
            <div class="slider">
                <div id="slider">
                    <div id="mover">
                        @for (int i = 0; i < slides.Count; i++)
                        {
                            <div id="slide-1" class="slide">
                                <div class="slider-img">
                                    <a href="@slides[i].Link"><img src="@Url.Content("~/Assets/Client/images/" + @slides[i].Image)" alt="learn more" /></a>
                                </div>
                                <div class="slider-text">
                                    <h1>Clearance<br><span>SALE</span></h1>
                                    <h2>UPTo 10% OFF</h2>
                                    <div class="features_list">
                                        <h4>Get to Know More About Our Memorable Services Lorem Ipsum is simply dummy text</h4>
                                    </div>
                                    <a href="preview.html" class="button">Shop Now</a>
                                </div>
                                <div class="clear"></div>
                            </div>
                        }
                    </div>
                </div>
                <div class="clear"></div>
            </div>
        </div>
        <div class="clear"></div>
    </div>
}

<div class="content">
    <div class="content_top">
        <div class="heading">
            <h3>Sản phẩm mới</h3>
        </div>
        <div class="see">
            <p><a href="/san-pham">Xem tất cả các sản phẩm</a></p>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section group">
        @for (int i = 0; i < newProducts.Count; i++)
        {
            <div class="grid_1_of_4 images_1_of_4">
                <a href="@Url.Content("/chi-tiet/" + @newProducts[i].MetaTitle + "-" + @newProducts[i].ID)">
                    <img src="@Url.Content("~/Assets/Client/images/" + newProducts[i].Image)" alt="@newProducts[i].Name">
                </a>
                <h2> @newProducts[i].Name </h2>
                <div class="price-details">
                    <div class="price-number">
                        <p><span class="rupees">@(newProducts[i].Price.HasValue ? @newProducts[i].Price.Value.ToString("N0") + " Đ" : "Liên hệ")</span></p>
                    </div>
                    <div class="add-cart">
                        <h4><a href="/them-san-pham?productID=@newProducts[i].ID&quantity=1">Thêm vào giỏ</a></h4>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
        }
    </div>
    <div class="content_bottom">
        <div class="heading">
            <h3>Sản phẩm hot</h3>
        </div>
        <div class="see">
            <p><a href="#">Xem tất cả các sản phẩm đang hot</a></p>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section group">
        @for (int i = 0; i < featureProducts.Count; i++)
        {
            <div class="grid_1_of_4 images_1_of_4">
                <a href="@Url.Content("/chi-tiet/" + @featureProducts[i].MetaTitle + "-" + @featureProducts[i].ID)">
                    <img src="@Url.Content("~/Assets/Client/images/" + @featureProducts[i].Image)" alt="@featureProducts[i].Name">
                </a>
                <h2> @featureProducts[i].Name </h2>
                <div class="price-details">
                    <div class="price-number">
                        <p><span class="rupees">@(@featureProducts[i].Price.HasValue ? @featureProducts[i].Price.Value.ToString("N0") + " Đ" : "Liên hệ") </span></p>
                    </div>
                    <div class="add-cart">
                        <h4><a href="/them-san-pham?productID=@featureProducts[i].ID&quantity=1">Thêm vào giỏ</a></h4>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
        }
    </div>
</div>

