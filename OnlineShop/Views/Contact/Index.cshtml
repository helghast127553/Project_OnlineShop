@model OnlineShop.Models.EF.Contact
@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-6">
                <h2>Thông tin liên hệ</h2>
                @Html.Raw(Model.Content)
                <br />
                <h2>Gửi thông tin</h2>
                <form id="contactForm">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label for="Name">Họ tên:</label>
                        <input type="text" id="Name" name="Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="txtPhone">Điện thoại:</label>
                        <input type="text" id="Phone" name="Phone" class="form-control" autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <label for="txtAddress">Địa chỉ:</label>
                        <input type="text" id="Address" name="Address" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="txtName">Email:</label>
                        <input type="email" id="Email" name="Email" class="form-control" autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <label for="txtName">Yêu cầu:</label>
                        <textarea id="Content" name="Content" class="form-control"></textarea>
                    </div>
                    <button id="btnSend" class="btn btn-success">Gửi đi</button>
                </form>
            </div>
            <div class="col-md-6">
                <h2>Bản đồ</h2>
                <div class="map" id="mapCanvas"></div>
            </div>
        </div>
    </div>
</div>

<style>
    #mapCanvas {
        height: 600px;
    }
</style>

@section jsFooter{
    <script src="https://maps.googleapis.com/maps/api/js"></script>
    <script src="~/Assets/Client/js/controller/GoogleMap.js"></script>
    <script src="~/Assets/Client/js/controller/ContactController.js"></script>
    @*@Scripts.Render("~/bundle/Contact");*@
}

