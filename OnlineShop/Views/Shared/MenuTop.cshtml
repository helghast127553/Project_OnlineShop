@model List<OnlineShop.Models.EF.Menu>
@using OnlineShop.Common
@{ 
    var session = Session[CommonConstants.USER_SESSION] as UserLogin;
}
<div class="call">
    <p><span>Need help?</span> call us <span class="number">01226933780</span></p>
</div>
<div class="account_desc">
    @if (session == null)
    {
        <ul>
            @for (int i = 0; i < Model.Count; i++)
            {
                <li>
                    <a href="@Model[i].Link" target="@Model[i].Target"> @Model[i].Text </a>
                </li>
            }
        </ul>
    }
    else
    {
        <ul>
            <li>Xin chào: @session.UserName</li>
            <li>@Html.ActionLink("Đăng xuất", "Logout", "User")</li>
        </ul>  
    }
</div>
<div class="clear"></div>

